@page "/fetchdata"
@using Nombre_Mystere.Models;

<PageTitle>Historique de jeu</PageTitle>

<h1>Historique des parties.</h1>

@if (GameHistory == null)
{
    <p><em>Aucune partie dans l'historique...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Nombre mystere</th>
                <th>Nombre de tentative</th>
                <th>Résultat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in GameHistory)
            {
                <tr>
                    <td>@game.DateOfTheGame.ToShortDateString()</td>
                    <td>@game.FoundNumber</td>
                    <td>@game.TryCounter</td>
                    <td>@game.Result? <i class="bi bi-check"></i> : <i class="bi bi-x"></i></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<Game> GameHistory { get; set; }


    
}
