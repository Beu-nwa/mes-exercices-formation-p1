<div class="text-center">
    <form class="border border-dark p-2" method="post" action="/Person/AddPerson">
        <div class="row my-4">
            <div class="row my-2">
                <label for="nom" class="col col-4">Nom :</label>
                <input class="col col-8" type="text" name="nom">
            </div>
            <div class="row my-2">
                <label for="prenom" class="col col-4">Prénom :</label>
                <input class="col col-8" type="text" name="prenom">
            </div>
        </div>
        <div class="d-flex justify-content-end my-2">
            <button type="submit">Ajouter une personne</button>
        </div>
    </form>
</div>
