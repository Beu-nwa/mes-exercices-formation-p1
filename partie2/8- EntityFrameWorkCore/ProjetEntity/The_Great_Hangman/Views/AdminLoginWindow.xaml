<Window x:Class="The_Great_Hangman.Views.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Great_Hangman.Views"
        mc:Ignorable="d"
        Title="AdminLoginWindow" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel  VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="LOGIN/ ADMIN" HorizontalAlignment="Center" FontSize="24"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Entrez le mot de passe Administrateur"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                    <TextBox Text="{Binding AdminPassword}" Width="150"/>
                    <Button Command="{Binding AdminPasswordCommand}" Content="Valider" Width="50"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
