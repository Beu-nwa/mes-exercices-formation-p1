<Window x:Class="The_Great_Hangman.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Great_Hangman.Views"
        mc:Ignorable="d"
        Title="AdminWindow" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" /> 
            <ColumnDefinition Width="1*" /> 
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="24" Margin="0,5" >Menu administrateur</TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button Command="{Binding ToUserWindowCommand}" Content="Utilisateurs" Margin="50" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Command="{Binding ToWordWindowCommand}" Content="Mots" Margin="50"/>
        </StackPanel>
    </Grid>
</Window>
