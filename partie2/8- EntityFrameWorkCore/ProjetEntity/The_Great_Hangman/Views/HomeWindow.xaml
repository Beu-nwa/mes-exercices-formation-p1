<Window x:Class="The_Great_Hangman.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Great_Hangman.Views"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Image Source="/Images/Hangman.jpg" Height="250" Width="600"/>
            <StackPanel Width="300" Margin="0 20 0 0">
                <Button Content="Joueur" Height="40" Margin="0 0 0 20" Command="{Binding PlayerLoginCommand}"/>
                <Button Content="Admin" Height="40" Command="{Binding AdminLoginCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
